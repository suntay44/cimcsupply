<!-- app/views/incidents/lists.html.erb -->
<div class="container mx-auto mt-8">
  <h1 class="text-2xl font-semibold mb-4">Lists of Incidents</h1>
  
  <h2 class="text-lg font-medium mb-2">All Incidents</h2>
  <ul class="list-disc pl-6">
    <% @incidents.each do |incident| %>
      <li>
        <%= incident.title %> (Severity: <%= incident.severity %>)
      </li>
    <% end %>
  </ul>
</div>

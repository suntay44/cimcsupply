<div class="flex-1 p-4 w-full md:w-1/2">
  <div class="mt-3 bg-white p-4 shadow rounded-lg">
    <div class="bg-white p-4 rounded-md mt-4">
    <h2 class="text-green-500 text-lg font-semibold pb-4"><i class="fas  fa-square-plus mr-2"></i> Restocking supplies...</h2>
  
    <%= form_with url: "/restock", method: :get do |f| %>
      <div class="flex flex-row mb-6 mt-10"">
        <div class="">
          <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Search</label>
          <%= f.text_field :name, placeholder: "Search...", autofocus: true,  class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light"%>
        </div>
      </div>
      
      <%= f.submit "Lookup", class: "text-white bg-green-500 hover:bg-green-600 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-red-700 dark:focus:ring-red-800"%>
    <% end %>
  </div>
  
    <%if @supplies.present?%>
      <table class="w-full table-auto text-sm">
          <thead>
              <tr class="text-sm leading-normal">
                <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Name</th>
                <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Brand</th>
                <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Description</th>
                <th class="py-2 px-4 bg-grey-lightest font-bold uppercase text-sm text-grey-light border-b border-grey-light text-left">Quantity</th>               
              </tr>
          </thead>
          <tbody>
            <% @supplies.each do |i| %>
              <tr class="hover:bg-grey-lighter">
                  <td class="py-2 px-4 border-b border-grey-light underline text-blue-500 hover:text-blue-700"><%= link_to i.name, "/restock/#{i.id}" %></td>
                  <td class="py-2 px-4 border-b border-grey-light"><%=i.brand%></td>
                  <td class="py-2 px-4 border-b border-grey-light"><%=i.description%></td>
                  <td class="py-2 px-4 border-b border-grey-light"><%=i.quantity%></td>
              </tr>
            <%end%>
          </tbody>
      </table>
      <%else%>
      </br>
      no result...
    <%end%>
  </div>
  </div>
</div>

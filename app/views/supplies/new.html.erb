<div class="flex-1 p-4 w-full md:w-1/2">
  <div class="mt-3 bg-white p-4 shadow rounded-lg">
    <div class="bg-white p-4 rounded-md mt-4">
    <h2 class="text-blue-500 text-lg font-semibold pb-4"><i class="fas fa-cart-plus mr-2"></i> Creating new entry...</h2>

      <div class="pl-10 mt-3">
        <%= form_with model: @new do |f| %>
          <div class="flex flex-row mb-6 mt-10"">
            <div class="">
              <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name</label>
              <%= f.text_field :name, autofocus: true, required: true, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light", placeholder:"Name"%>
            </div>
            <div class="ml-5">
              <label for="brand" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Brand</label>
              <%= f.text_field :brand, required: true, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light", placeholder:"Brand"%>
            </div>
            <div class="ml-5">
              <label for="type" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Type</label>
              <%= f.select(:supply_type, options_for_select(Supply.supply_types.map {|k, v| [k.humanize.capitalize, k]}), {include_blank: "Select" }, {required: true, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light"}) %>
            </div>
          </div>
            <div class="">
              <label for="description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Description</label>
              <%= f.text_field :description, required: true, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light", placeholder:"Description..."%>
            </div>

          <div class="flex flex-row mb-6 mt-10">
          <%if params[:type] == "piece"%>
            <div class="">
              <label for="quantity" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Quantity</label>
              <%= f.number_field :quantity, min:0, required: true, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light", placeholder:"0"%>
            </div>
          <%elsif params[:type]=="box"%>
            <div class="">
              <label for="quantity" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Box Quantity</label>
              <%= f.number_field :box_quantity, min:0, required: true, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light", placeholder:"0"%>
            </div>
            <div class="ml-1">
              <label for="quantity" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Quantity Per Piece/Box</label>
              <%= f.number_field :qty_per_box, min:0, required: true, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light", placeholder:"0"%>
            </div>
          <%else%>
            <div class="">
              <label for="quantity" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Quantity</label>
              <%= f.number_field :quantity, min:0, required: true, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light", placeholder:"0"%>
            </div>
          <%end%>
            <div class="ml-3">
              <label for="expiry" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Expiry Date</label>
              <%= f.date_field :expiration, min: Date.today + 1.days, required: true, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light"%>
            </div>
            <div class="ml-5">
            <label for="expiry_warning" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Expiry Warning (Days)</label>
            <%= f.number_field :expiration_warning, min:0, required: true, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light", placeholder:"30"%>
          </div>
            <div class="ml-5">
            <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Barcode</label>
            <%= f.text_field :upc, autofocus: true, class:"shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-m rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500 dark:shadow-sm-light"%>
          </div>
          </div>
          <%= f.submit "CREATE", class: "text-white bg-green-500 hover:bg-green-600 focus:ring-4 focus:outline-none focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-green-700 dark:focus:ring-green-800"%>
        <% end %>
      </div>  

    </div>
  </div>
</div>
